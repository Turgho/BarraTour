# Dockerfile.dev
FROM mcr.microsoft.com/dotnet/sdk:9.0-noble

# Define variáveis de ambiente
ENV ASPNETCORE_ENVIRONMENT=Development
ENV DOTNET_USE_POLLING_FILE_WATCHER=1
ENV ASPNETCORE_URLS=http://+:80

# Instala apenas ferramentas essenciais para desenvolvimento
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    curl \
    procps \
    && rm -rf /var/lib/apt/lists/*

# Define o diretório de trabalho
WORKDIR /app

# Copia os arquivos de projeto primeiro (para melhor cache)
COPY ["BarraTour.sln", "."]
COPY ["src/BarraTour.Backend/BarraTour.Api/BarraTour.Api.csproj", "src/BarraTour.Backend/BarraTour.Api/"]
COPY ["src/BarraTour.Backend/BarraTour.Application/BarraTour.Application.csproj", "src/BarraTour.Backend/BarraTour.Application/"]
COPY ["src/BarraTour.Backend/BarraTour.Domain/BarraTour.Domain.csproj", "src/BarraTour.Backend/BarraTour.Domain/"]
COPY ["src/BarraTour.Backend/BarraTour.Infrastructure/BarraTour.Infrastructure.csproj", "src/BarraTour.Backend/BarraTour.Infrastructure/"]

# Restaura as dependências
RUN dotnet restore "BarraTour.sln"

# Copia todo o código fonte
COPY . .

# Expõe as portas
EXPOSE 80

# Comando para desenvolvimento (watch mode com hot reload)
ENTRYPOINT ["dotnet", "watch", "run", "--project", "src/BarraTour.Backend/BarraTour.Api/", "--urls"]